
<div class="row">
  <div class="col-md-6 offset-3">
    <h1>
      <%= @user.username %>'s followers
    </h1>

    <ul class="nav nav-pills nav-justified">
      <li class="nav-item">
        <%= link_to "Posts", user_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Liked photos", liked_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Feed", feed_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Followers", followers_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Following", following_path(@user.username), class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<ul class="list-group">
  <% @user.followers.each do |follower| %>
    <li class="list-group-item">
      <%= link_to "#{follower.username}", user_path(follower.username) %>
    </li>
  <% end %>
</ul>
